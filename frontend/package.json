{
  "name": "media-player",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint": "ng lint",
    "lint:styles": "stylelint 'src/**/*.scss'",
    "lint:styles:fix": "stylelint 'src/**/*.scss' --fix",
    "lint:all": "npm run lint && npm run lint:styles",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check:all": "npm run format:check && npm run lint:all",
    "prepare": "cd .. && husky || true"
  },
  "lint-staged": {
    "*.{ts,html,json,scss,css,md}": "prettier --write",
    "*.ts": "eslint --fix",
    "*.scss": "stylelint --fix"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.0",
    "@angular/cdk": "^21.0.0",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.0",
    "@angular/router": "^21.0.0",
    "@ngrx/operators": "^21.0.0",
    "@ngrx/signals": "^19.0.0 || ^20.0.0 || ^21.0.0",
    "@primeng/themes": "^21.0.0",
    "@stomp/stompjs": "^7.0.0",
    "primeicons": "^7.0.0",
    "primeng": "^21.0.0",
    "rxjs": "~7.8.0",
    "sockjs-client": "^1.6.1",
    "tslib": "^2.8.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^1.10.0",
    "@angular-eslint/builder": "^21.0.0",
    "@angular/build": "^21.0.0",
    "@angular/cli": "^21.0.0",
    "@angular/compiler-cli": "^21.0.0",
    "@eslint/js": "^9.0.0",
    "@ngrx/effects": "^21.0.1",
    "@ngrx/eslint-plugin": "^21.0.1",
    "@testing-library/angular": "^17.0.0",
    "@types/sockjs-client": "^1.5.4",
    "@vitest/coverage-v8": "^4.0.0",
    "angular-eslint": "^21.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-rxjs-x": "^0.8.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.3.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "stylelint": "^16.26.1",
    "stylelint-config-prettier-scss": "^1.0.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "~5.9.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^6.0.0",
    "vite-tsconfig-paths": "^6.0.3",
    "vitest": "^4.0.0"
  }
}
