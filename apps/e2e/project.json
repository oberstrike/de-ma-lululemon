{
  "name": "e2e",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/e2e",
  "targets": {
    "e2e": {
      "executor": "@nx/playwright:playwright",
      "outputs": ["{workspaceRoot}/apps/e2e/playwright-report"],
      "options": {
        "config": "apps/e2e/playwright.config.ts"
      }
    },
    "e2e-smoke": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "grep": "@smoke"
      }
    },
    "e2e-critical": {
      "executor": "@nx/playwright:playwright",
      "options": {
        "config": "apps/e2e/playwright.config.ts",
        "grep": "@critical"
      }
    }
  },
  "tags": ["scope:e2e", "type:e2e"]
}
